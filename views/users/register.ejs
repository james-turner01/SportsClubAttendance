<% layout('layouts/boilerplate') %>
<div class="container col-10 col-md-8">
  <h1>Register</h1>

  <form action="/register" method="POST" class="needs-validation" novalidate>
    <div class="mb-3">
      <label for="username" class="form-label">Username:</label>
      <input type="text" class="form-control input" id="username" name="username" maxlength="20" required>
      <div class="valid-feedback">
        Looks good!
      </div>
    </div>
    <div class="mb-3">
      <label for="email" class="form-label">Email:</label>
      <input type="email" class="form-control input" id="email" name="email" required>
      <div class="valid-feedback">
        Looks good!
      </div>
    </div>
    <div class="mb-3">
      <label for="password" class="form-label">Password:</label>
      <input type="password" class="form-control input" id="password" name="password" required>
      <div class="valid-feedback">
        Looks good!
      </div>
    </div>
    <div class="mb-3">
      <label for="admin" class="form-label">Admin Code:</label>
      <input type="password" class="form-control input" id="admin" name="adminCode">
      <div class="valid-feedback">
        Looks good!
      </div>
    </div>
    <div class="mb-3">
      <button class="btn btn-success">Register</button>
    </div>
  </form>
</div>